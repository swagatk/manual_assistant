rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Manuals: Authenticated users can read, admins can write.
    match /manuals/{manualId} {
      allow read: if request.auth != null && (request.auth.token.admin == true || request.auth.token.approved == true);
      allow write: if request.auth.token.admin == true;
    }

    // Feedback: Authenticated users can create, admins can read.
    match /feedback/{feedbackId} {
      allow create: if request.auth != null && (request.auth.token.admin == true || request.auth.token.approved == true);
      allow read: if request.auth.token.admin == true;
    }

    // Settings: Only admins can read and write.
    match /settings/{settingId} {
      allow read, write: if request.auth.token.admin == true;
    }
  }
}